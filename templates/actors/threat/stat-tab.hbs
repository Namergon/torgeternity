 <div class="threat-contents block">
                <div class="threat-block">
                    <a class="toggle-threat-edit" title="Edit" style="float:right"><i class="fas fa-edit"></i></a>
                    <div style="margin-right:10px">
                        <b>{{localize "torgeternity.sheetLabels.attributes"}}: </b>

                        <a 
                            class="skill-roll" 
                            data-testType="attribute" 
                            data-baseAttribute="{{data.attributes.charisma}}" 
                            data-adds="0" 
                            data-value="{{data.attributes.charisma}}" 
                            data-unskilledUse="1" 
                            data-name="{{localize "torgeternity.attributes.charisma"}}"
                            >
                            {{localize "torgeternity.attributes.charisma"}}
                        </a>
                        {{data.attributes.charisma}}, &nbsp;
                        
                        <a 
                            class="skill-roll" 
                            data-testType="attribute" 
                            data-baseAttribute="{{data.attributes.dexterity}}" 
                            data-adds="0" 
                            data-value="{{data.attributes.dexterity}}" 
                            data-unskilledUse="1" 
                            data-name="{{localize "torgeternity.attributes.dexterity"}}"
                            >
                            {{localize "torgeternity.attributes.dexterity"}}
                        </a>
                        {{data.attributes.dexterity}}, &nbsp;
                        
                        <a 
                            class="skill-roll" 
                            data-testType="attribute" 
                            data-baseAttribute="{{data.attributes.mind}}" 
                            data-adds="0" 
                            data-value="{{data.attributes.mind}}" 
                            data-unskilledUse="1" 
                            data-name="{{localize "torgeternity.attributes.mind"}}"
                            >
                            {{localize "torgeternity.attributes.mind"}}
                        </a>
                        {{data.attributes.mind}}, &nbsp;
                        
                        <a 
                            class="skill-roll" 
                            data-testType="attribute" 
                            data-baseAttribute="{{data.attributes.spirit}}" 
                            data-adds="0" 
                            data-value="{{data.attributes.spirit}}" 
                            data-unskilledUse="1" 
                            data-name="{{localize "torgeternity.attributes.spirit"}}"
                            >
                            {{localize "torgeternity.attributes.spirit"}}
                        </a>
                        {{data.attributes.spirit}}, &nbsp;
                        
                        <a 
                            class="skill-roll" 
                            data-testType="attribute" 
                            data-baseAttribute="{{data.attributes.strength}}" 
                            data-adds="0" 
                            data-value="{{data.attributes.strength}}" 
                            data-unskilledUse="1" 
                            data-name="{{localize "torgeternity.attributes.strength"}}"
                            >
                            {{localize "torgeternity.attributes.strength"}}
                        </a>
                        {{data.attributes.strength}}, &nbsp;

                    </div>
                </div>



                <div class="threat-block">
                    <b>{{localize "torgeternity.sheetLabels.skills"}}:&nbsp;</b>
                    <span class="inline-skill-list">
                        {{#each data.skills as |content name|}}
                        {{#if content.value}}
                        <span class="inline-skill-item">
                            <a 
                                class="skill-roll" 
                                data-testType="skill" 
                                data-baseAttribute="{{content.baseAttribute}}" 
                                data-adds="{{content.adds}}" 
                                data-value="{{content.value}}" 
                                data-unskilledUse="{{content.unskilledUse}}" 
                                data-name="{{localize (concatSkillName name)}}"
                                >
                                {{localize (concatSkillName name)}}
                            </a>
                            &nbsp;{{content.value}}
                        </span>
                        {{/if}}
                        {{/each}}
                    </span>

                </div>

                 <div class="threat-block">
                        <b>{{localize "torgeternity.sheetLabels.move"}}:</b>&nbsp;{{data.other.move}};&nbsp;
                        <b>{{localize "torgeternity.sheetLabels.toughness"}}:</b>&nbsp;{{data.other.toughness}}&nbsp;({{data.other.armor}});&nbsp;
                        <b>{{localize "torgeternity.sheetLabels.shock"}}:&nbsp;</b>
                        {{data.shock.max}};&nbsp;
                        <b>{{localize "torgeternity.sheetLabels.wounds"}}:&nbsp;</b>
                        {{data.wounds.max}}
                    </div>

                <div class="threat-block">
                    <b>{{localize "torgeternity.sheetLabels.equipment"}}:</b>&nbsp;
                    <span class="inline-skill-list">
                        {{#each meleeweapons as |item id|}}
                        <a class="item-attackRoll inline-skill-item item" data-item-id="{{item._id}}">{{item.name}}</a>
                        {{/each}}

                        {{#each missileweapon as |item id|}}
                        <a class="item-attackRoll inline-skill-item item" data-item-id="{{item._id}}">{{item.name}}</a>
                        {{/each}}

                        {{#each firearm as |item id|}}
                        <a class="item-attackRoll inline-skill-item item" data-item-id="{{item._id}}">{{item.name}}</a>
                        {{/each}}

                        {{#each heavyweapon as |item id|}}
                        <a class="item-attackRoll inline-skill-item item" data-item-id="{{item._id}}">{{item.name}}</a>
                        {{/each}}

                        {{#each armor as |item id|}}
                        <span class="inline-skill-item">{{item.name}}</span>
                        {{/each}}

                        {{#each shield as |item id|}}
                        <span class="inline-skill-item">{{item.name}}</span>
                        {{/each}}

                        {{#each gear as |item id|}}
                        <span class="inline-skill-item">{{item.name}}</span>
                        {{/each}}

                        {{#each implant as |item id|}}
                        <span class="inline-skill-item">{{item.name}}</span>
                        {{/each}}

                        {{#each eternityshard as |item id|}}
                        <span class="inline-skill-item">{{item.name}}</span>
                        {{/each}}

                        {{#each eternityshard as |item id|}}
                        <span class="inline-skill-item">{{item.name}}</span>
                        {{/each}}

                        <div class="threat-block">
                            <b>{{localize "torgeternity.sheetLabels.perks"}}</b>:&nbsp;
                            <span class="inline-skill-list">
                                {{#each perk as |item id|}}
                                <span class="inline-skill-item">{{item.name}}</span>
                                {{/each}}
                            </span>
                        </div>

                        <div class="threat-block">
                            <b>{{localize "torgeternity.sheetLabels.specialabilities"}}</b>:
                            <ul class="specialability-list">

                                {{#each specialabilityRollable as |item id|}}
                                <li>
                                    <b><a class="item-attackRoll item" data-item-id="{{item._id}}">{{item.name}}</a></b>
                                    .&nbsp;
                                    {{{item.data.description}}}
                                </li>
                                {{/each}}

                                {{#each specialability as |item id|}}
                                <li>
                                    <b>{{item.name}}</b>
                                    .&nbsp;
                                    {{{item.data.description}}}
                                </li>
                                {{/each}}

                            </ul>
                        </div>
                        <div class="threat-block">
                            <b>{{localize "torgeternity.stats.description"}}</b>
                            {{{data.details.description}}}
                        </div>
                    </span>
                </div>
 </div>
