<div class="miracle-border sheet-card {{data.type}}" data-type="{{data.type}}" style="background-image: url('systems/torgeternity/images/bgparch.webp')">
    <table style="border:none;background-color:transparent">
    <tr style="border:none">
        <td>
            <img class="perk-icon" src="{{img}}" title="{{name}}" style="width:50px;height:50px" />
        </td>
        <td class="chat-title">
            {{name}}
        </td>
    </tr>
    </table>
    <div class="item-description-chat" data-item-id="{{_id}}">
        <div class="item-description-chat">{{{data.description}}}</div>
        <span style="font-weight:bold">Good:</span>
        <div class="item-description-chat">{{data.good}}</div>
        <span style="font-weight:bold">Outstanding:</span>
        <div class="item-description-chat">{{data.outstanding}}</div>
        <div class="item-dropdown-extras">
            {{localize "torgeternity.attributes.spirit"}} {{data.axiom}}
        </div>
        <div class="item-dropdown-extras">
            {{data.skill}}
        </div>
        <div class="item-dropdown-extras">
            {{data.castingtime}}
        </div>  
        <div class="item-dropdown-extras">
            {{data.range}}
        </div>  
        <div class="item-dropdown-extras">
            {{data.duration}}
        </div>  
    </div>
                               

</div>