<form class="actor-sheet {{cssClass}} sheet" autocomplete="off">
    <header class="sheet-header">
        <img src="{{actor.img}}" class="profile-img" data-edit="img" title="{{actor.name}}" />
        <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name" style="width:375px;font-family:'Palatino Linotype';background-color:white;border-radius:10px" /></h1>
        <h1 style="font-size:38px;text-align:center;font-family:'Palatino Linotype'">{{localize "torgeternity.sheetLabels.threat"}}</h1>
    </header>
    <div>
        <table style="border:none;background:none;font-family:'Palatino Linotype';font-size:14;font-weight:bold">
            <tr>
            <td style="text-align:center" width="30%">
                <span class="vital-box">
                    Wounds: 
                    <input name="data.wounds.value" type="number" value="{{data.wounds.value}}" data-dtype="Number" class="small-input" />
                    /
                    <input name="data.wounds.max" type="number" value="{{data.wounds.max}}" data-dtype="Number" class="small-input" />
                </span>
            </td>
                <td style="text-align:center" width="30%">
                    <span class="vital-box">
                        Shock: 
                        <input name="data.shock.value" type="number" value="{{data.shock.value}}" data-dtype="Number" class="small-input" />
                        /
                        <input name="data.shock.max" type="number" value="{{data.shock.max}}" data-dtype="Number" class="small-input" />
                    </span>
                </td>
            <td style="text-align:center" width="30%">
                <span class="vital-box">
                    <a class="item-control possibility-roll" title="Possibility Roll">Possibilities: </a>
                    <input name="data.other.possibilities" type="number" value="{{data.other.possibilities}}" data-dtype="Number" class="small-input" />
                </span>
            </td>
            <td style="text-align:center" width="10%">
                <span class="vital-box">
                    <a class="item-control up-roll" title="Up Roll">Up</a>
                </span>
            </td>
            </tr>
        </table>
    </div>  


    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary" style="background-image:url('systems/torgeternity/images/tab-header.webp');background-size:578px 30px;background-repeat:no-repeat;color:white">
        <a class="item" data-tab="stats" style="vertical-align:center">Stats</a>
        <a class="item" data-tab="perks">Perks/Abilities</a>
        <a class="item" data-tab="gear">Gear</a>
        <a class="item" data-tab="powers">Powers</a>
    </nav>

